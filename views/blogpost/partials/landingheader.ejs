    <section class="form-signin">
      <form action="/Landing_Page" method="POST">
        <h1 class="h3 mb-3 font-weight-normal form-h1">
          Sign up for our newsletter!
        </h1>
        <label for="fName" class="sr-only top">First Name</label>
        <input
          id="fName"
          type="text"
          name="fName"
          class="form-control top"
          placeholder="First Name"
          required
        />
        <label for="lName" class="sr-only middle">Last Name</label>
        <input
          id="lName"
          type="text"
          name="lName"
          class="form-control middle"
          placeholder="Last Name"
          required
        />
        <label for="email" class="sr-only form-email bottom">Email</label>
        <input
          id="email"
          type="email"
          name="email"
          class="form-control bottom"
          placeholder="Email"
          required
        />
        <button class="btn btn-lg btn-primary btn-block" type="submit">
          Sign Up
        </button>
      </form>
